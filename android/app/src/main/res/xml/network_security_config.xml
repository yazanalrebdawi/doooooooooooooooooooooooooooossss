<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Default: Block cleartext traffic for security -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>

    <!-- Only allow cleartext for local development servers (debug builds only) -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">192.168.138.185</domain>
        <domain includeSubdomains="true">192.168.1.219</domain>
    </domain-config>
</network-security-config>